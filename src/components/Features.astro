<section class="max-w-6xl mx-auto p-4 md:p-8 my-12">
  <div class="border-b-4 border-feciit-dark mb-8">
    <h2 class="text-4xl md:text-5xl font-black uppercase text-feciit-dark mb-2">Explora FECIIT</h2>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    {['Talleres', 'Ponencias', 'Entretenimiento', 'Comidas', 'Empresas', 'Convocatoria', 'Galería 2025', 'Programa'].map((item, index) => (
      <div class={`
        p-6 border-2 border-feciit-dark flex items-center justify-center text-center
        hover:bg-feciit-blue hover:text-white transition-colors cursor-pointer group
        ${index % 2 === 0 ? 'bg-gray-100' : 'bg-white'}
      `}>
        <span class="font-bold text-lg uppercase group-hover:scale-110 transition-transform">{item}</span>
      </div>
    ))}
  </div>
  
  <div class="mt-12 bg-feciit-blue p-6 text-white text-center border-4 border-feciit-dark transform rotate-1">
    <h3 class="text-2xl font-bold mb-4">¡Participa!</h3>
    <p class="mb-4 font-medium">¿Quieres ser parte de la ciencia?</p>
    <div class="flex flex-wrap justify-center gap-4">
      <button class="bg-white text-feciit-dark font-bold py-2 px-4 border-2 border-black hover:bg-black hover:text-white transition-colors shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
        Convocatoria
      </button>
      <button class="bg-feciit-dark text-white font-bold py-2 px-4 border-2 border-white hover:bg-white hover:text-feciit-dark transition-colors shadow-[4px_4px_0px_0px_rgba(255,255,255,1)]">
        Ser Patrocinador
      </button>
    </div>
  </div>
</section>
