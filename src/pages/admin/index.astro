---
import Layout from '../../layouts/Layout.astro';
import Dashboard from '../../components/Dashboard';
---

<Layout title="Admin Dashboard | FECIIT 2026" navTheme="light">
    <main class="min-h-screen bg-slate-100/50 pt-28 pb-16 px-6 relative overflow-hidden">
        <!-- Decoration -->
        <div class="absolute top-0 left-0 w-full h-[400px] bg-gradient-to-b from-white to-transparent pointer-events-none"></div>
        
        <div class="max-w-[1400px] mx-auto relative z-10">
            <div class="flex justify-between items-center mb-8">
                <div class="flex items-center gap-4">
                    <a href="/" class="p-2 hover:bg-white rounded-full transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 hover:text-feciit-blue"><path d="m15 18-6-6 6-6"/></svg>
                    </a>
                    <h1 class="text-2xl font-bold text-feciit-dark">Control de Gesti√≥n</h1>
                </div>
                <div class="flex items-center gap-3">
                    <span class="text-sm font-bold text-gray-400">FEBRERO 08, 2026</span>
                    <div class="w-2 h-2 rounded-full bg-green-500"></div>
